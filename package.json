{
  "name": "track-time",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@effect/language-service": "^0.57.0",
    "@types/bun": "latest",
    "sharp": "^0.34.5",
    "tailwindcss": "latest",
    "ultracite": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "bun run --bun build.ts",
    "check": "bunx run --bun ultracite check",
    "dev": "bun run --bun src/index.ts",
    "fix": "bun run --bun ultracite fix",
    "format": "bunx --bun biome format --write ./src",
    "start": "cd dist && NODE_ENV=production bun run --bun --env-file=../.env src/index.js"
  },
  "dependencies": {
    "bun-plugin-tailwind": "latest",
    "effect": "latest"
  }
}
